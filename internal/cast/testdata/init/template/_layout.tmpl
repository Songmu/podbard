{{define "layout" -}}
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{{.Page.Title}}</title>
  <meta name="description" content="{{.Page.Description}}" />

  <meta property="og:title" content="{{.Page.Title}}" />
  <meta property="og:site_name" content="{{.Channel.Title}}" />
  <meta property="og:description" content="{{.Page.Description}}" />
  <meta property="og:url" content="{{.Page.URL}}" />
  <meta property="og:type" content="website" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="{{.Page.Title}}">
  <meta name="twitter:description" content="{{.Page.Description}}">
  <meta name="twitter:url" content="{{.Page.URL}}">

  <meta name="viewport" content="width=device-width" />
  <link rel="alternate" type="application/rss+xml" href="{{.Channel.FeedURL}}" />
  <link rel="stylesheet" href="{{.Channel.Link.Path}}/css/style.css">
</head>
<body>

<header>
<h1><a href="{{.Channel.Link.Path}}">{{.Channel.Title}}</a></h1>
<p>{{.Channel.Description}}</p>
</header>

<main>
{{- template "content" . -}}
</main>

<footer>
    <p>Generated by <a href="https://github.com/Songmu/primcast" target="_blank">primcast</a></p>
</footer>

</body>
</html>
{{- end}}
