{{define "layout" -}}
<!DOCTYPE html>
<html>
<head>
  {{- if .Channel.Private -}}
  <meta name="robots" content="noindex,nofollow">
  <meta name="referrer" content="same-origin">
  {{- end}}
  <meta charset="UTF-8">
  <title>{{.Page.Title}}</title>
  <meta name="description" content="{{.Page.Description}}" />

  <meta property="og:title" content="{{.Page.Title}}" />
  <meta property="og:site_name" content="{{.Channel.Title}}" />
  <meta property="og:description" content="{{.Page.Description}}" />
  <meta property="og:url" content="{{.Page.URL}}" />
  <meta property="og:type" content="website" />

  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content="{{.Page.Title}}">
  <meta name="twitter:description" content="{{.Page.Description}}">
  <meta name="twitter:url" content="{{.Page.URL}}">

  <meta name="viewport" content="width=device-width" />
  <link rel="alternate" type="application/rss+xml" href="{{.Channel.FeedURL}}" />
  <link rel="icon" href="{{.Channel.Link.Path}}favicon.ico">
  <link rel="stylesheet" href="{{.Channel.Link.Path}}css/style.css">
</head>
<body>

<header>
  <h1><a href="{{.Channel.Link.Path}}">{{.Channel.Title}}</a></h1>
  <p>{{.Channel.Description}}</p>
</header>

<main>
{{- template "content" . -}}
</main>

<footer>
  <section>
    <h2>Subscribe</h1>
    <ul>
      <li><a href="{{.Channel.FeedURL.Path}}" target="_blank">RSS</a></li>
    </ul>
  </section>
  <div>Â© 2024 {{.Channel.Author}}</div>
  <div><small>Generated by <a href="https://github.com/Songmu/podbard" target="_blank">podbard</a></small></div>
</footer>

</body>
</html>
{{- end}}
